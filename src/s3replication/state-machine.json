{
  "Comment": "State Machine",
  "StartAt": "XMLValidation",
  "States": {
    "XMLValidation": {
      "Type": "Task",
      "Resource": "${XMLValidateTask.Arn}",
      "Next": "WaitToActivate"
    },
    "WaitToActivate": {
      "Type": "Wait",
      "SecondsPath": "$.WaitInSeconds",
      "Next": "Replication"
    },
    "Replication": {
      "Type": "Task",
      "Resource": "${ReplicationTask.Arn}",
      "End": true
    }
  }
}